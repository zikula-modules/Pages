{% form_theme form 'ZikulaFormExtensionBundle:Form:bootstrap_3_zikula_admin_layout.html.twig' %}
{{ pageSetVar('title', __('Delete page')) }}
{{ adminHeader() }}
<div class="container-fluid">
    <div class="row">
        <h3>
            <span class="fa fa-trash-o"></span>
            {{ __('Delete this page?') }}
        </h3>
        {{ showflashes() }}
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <fieldset>
            <legend>{{ __('Page Details') }}</legend>
            <div class="col-lg-offset-3 col-lg-9">
                <ul>
                    <li>{{ __('ID') }}: {{ page.pageid }}</li>
                    <li>{{ __('Title') }}: {{ page.title }}</li>
                    <li>{{ __('Created on') }}: {{ page.cr_date|date("m/d/Y") }}</li>
                    <li>{{ __('Created by') }}: {{ page.creator.uname }}</li>
                </ul>
            </div>
        </fieldset>
        <fieldset>
            {% for hook_template in hook_templates %}
                {{ include(hook_template.0, hook_template.1, ignore_missing = true) }}
            {% endfor %}
        </fieldset>
        <div class="form-group">
            <div class="col-lg-offset-3 col-lg-9">
                {{ form_widget(form.delete, {'attr': {'class': 'btn btn-success'}}) }}
                {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-default'}}) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    {{ notifyDisplayHooks('pages.ui_hooks.pages.form_delete', page.pageid|default(null)) }}

</div>
{{ adminFooter() }}
