<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.tokens.action_listener" class="Zikula\PagesModule\Listener\AdminAuthListener">
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
        </service>
        <service id="zikulapagesmodule.link_container" class="Zikula\PagesModule\Container\LinkContainer">
            <argument type="service" id="translator" />
            <argument type="service" id="router" />
            <tag name="zikula.link_container" />
        </service>
        <service id="twig.extension.pages_pager" class="Zikula\PagesModule\Twig\Extension\PagerExtension" public="false">
            <!-- This service is @deprecated immediately. At Core-1.4.2 use the core's pager. -->
            <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>