{# purpose of this template: display pages without the theme #}
{% trans_default_domain 'messages' %}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ app.request.locale }}" lang="{{ app.request.locale }}">
<head>
    <title>{{ block('pageTitle') is defined ? block('pageTitle') : block('title') }}</title>
</head>
<body>
    {% if useFinder|default != true %}
        <h2>{{ block('title') }}</h2>
    {% endif %}
    {% block content %}{% endblock %}
    {% block footer %}
        <p id="poweredByMost" class="text-center">
            Powered by <a href="https://modulestudio.de" title="Get the MOST out of Zikula!">ModuleStudio 1.5.0</a>
        </p>
        {{ pageAddAsset('javascript', zasset('@ZikulaPagesModule:js/ZikulaPagesModule.Backlink.Integration.js')) }}
        {{ pageAddAsset('stylesheet', zasset('@ZikulaPagesModule:css/custom.css'), 120) }}
        {{ pageAddAsset('javascript', zasset('@ZikulaPagesModule:js/ZikulaPagesModule.js')) }}
        {% if useFinder|default != true %}
            {{ pageAddAsset('javascript', zasset('@ZikulaPagesModule:js/ZikulaPagesModule.RawPage.js')) }}
        {% endif %}
    {% endblock %}
</body>
</html>
