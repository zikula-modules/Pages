                <i class="fas fa-check text-success{% if not page.displayUpdated %} d-none{% endif %}" id="yesDisplayUpdated{{ itemId|e('html_attr') }}" title="{{ 'This setting is enabled. Click here to disable it.'|trans({}, 'messages')|e('html_attr') }}"></i>
