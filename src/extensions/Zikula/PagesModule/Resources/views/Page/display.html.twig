            </a>
            <noscript><div id="noscriptDisplayTextInfo{{ itemId|e('html_attr') }}">
                {% if page.displayTextInfo %}
                    <i class="fas fa-check text-success" title="{{ 'Yes'|trans({}, 'messages')|e('html_attr') }}"></i>
                {% else %}
